{
  "manifest_version": 3,
  "name": "Bulk File Downloader",
  "version": "1.0.0",
  "description": "Scan any webpage for downloadable files and download them with one click",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
