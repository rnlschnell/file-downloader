---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Download all files from any webpage with one click. Bulk File Downloader is a free Chrome extension for batch downloading images, videos, documents, and more." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="bulk file downloader, batch download, download all files, mass download, chrome extension, download images, download videos, download documents" />
    <link rel="icon" type="image/png" href="/icon128.png" />
    <link rel="canonical" href="https://bulkfiledownloads.com" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bulkfiledownloads.com" />
    <meta property="og:image" content="https://bulkfiledownloads.com/icon128.png" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;1,9..40,400&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --orange: #FF8C00;
    --orange-light: #FFB347;
    --orange-dark: #E67300;
    --orange-glow: rgba(255, 140, 0, 0.3);
    --dark: #0D0D0D;
    --dark-lighter: #1A1A1A;
    --dark-card: #141414;
    --gray-900: #171717;
    --gray-800: #262626;
    --gray-700: #404040;
    --gray-600: #525252;
    --gray-400: #A3A3A3;
    --gray-300: #D4D4D4;
    --gray-100: #F5F5F5;
    --white: #FAFAFA;
    --font-display: 'DM Sans', sans-serif;
    --font-mono: 'Space Mono', monospace;
  }

  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-display);
    background: var(--dark);
    color: var(--gray-300);
    line-height: 1.6;
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
  }

  h1, h2, h3, h4 {
    font-weight: 700;
    line-height: 1.1;
    color: var(--white);
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 16px;
    }
  }

  /* Selection */
  ::selection {
    background: var(--orange);
    color: var(--dark);
  }

  /* Scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--dark);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--gray-700);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--gray-600);
  }
</style>
